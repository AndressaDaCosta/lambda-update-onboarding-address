{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2017",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
